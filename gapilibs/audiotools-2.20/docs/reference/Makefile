.SUFFIXES: .pdf .bdx .bpx .bypx .dot

.bdx.pdf:
	./bitdiagram.py -i $< -o $@

.bpx.pdf:
	./bitparse.py -i $< -o $@

.bypx.pdf:
	./byteparse.py -i $< -o $@

.dot.pdf:
	dot -Tpdf $< -o $@

